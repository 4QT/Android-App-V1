<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/rellay_custom_title"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/red"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_left"
            android:layout_width="32dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/padding8"
            android:background="@drawable/ic_drawer"
            android:scaleType="fitCenter"
            android:textAppearance="@style/text_Small" />

        <TextView
            android:id="@+id/txv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/padding10"
            android:text="Customer Details"
            android:textAppearance="@style/text_Medium"
            android:textColor="@color/white" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linlay_chck"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rellay_custom_title"
        android:orientation="horizontal" >

        <CheckBox
            android:id="@+id/chck_today"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Today" />

        <CheckBox
            android:id="@+id/chck_new"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New" />

        <CheckBox
            android:id="@+id/chck_pending"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pending" />

        <CheckBox
            android:id="@+id/chck_future"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Future" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linlay_chck2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linlay_chck"
        android:orientation="horizontal" >

        <CheckBox
            android:id="@+id/chck_dump"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dump" />

        <CheckBox
            android:id="@+id/chck_success"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Success" />

        <CheckBox
            android:id="@+id/chck_sitevisit_done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SitVisit Done" />

        
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/linlay_chck3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linlay_chck2"
        android:orientation="horizontal" >

        <CheckBox
            android:id="@+id/chck_attempt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Attempted" />

        
    </LinearLayout>
    

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/linlay_chck3"
        android:layout_margin="10dp" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/txv_customerdetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Search Enquiry"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="* Mobile Number" />

            <EditText
                android:id="@+id/edt_mobile_number"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/ronded_color_rectangle"
                android:ems="10"
                android:hint="+91 8884333647"
                android:textSize="14sp" >
            </EditText>

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="* Your Full Name" />

            <EditText
                android:id="@+id/edt_fullname"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/ronded_color_rectangle"
                android:ems="10"
                android:hint="Name"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textView17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="* Source" />

            <Spinner
                android:id="@+id/edt_source"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:background="@drawable/ronded_color_rectangle"
                android:ems="10"
                android:hint="Source"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="* Project" />

            <Spinner
                android:id="@+id/edt_search_project"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:background="@drawable/ronded_color_rectangle"
                android:ems="10"
                android:hint="select project"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Unit Type" />

            <Spinner
                android:id="@+id/edt_search_unityype"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:background="@drawable/ronded_color_rectangle"
                android:ems="10"
                android:hint="Unity type"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Follow Up Type" />

            <Spinner
                android:id="@+id/edt_search_followuptype"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:background="@drawable/ronded_color_rectangle"
                android:ems="10"
                android:hint="Follow Up type"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enquiry Date From" />

            <Spinner
                android:id="@+id/edt_search_enquirytype_from"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:background="@drawable/ronded_color_rectangle"
                android:ems="10"
                android:hint="Enquiry type from"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enquiry Date To" />

            <Spinner
                android:id="@+id/edt_search_enquirytype_to"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:background="@drawable/ronded_color_rectangle"
                android:ems="10"
                android:hint="Enquiry type from"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enquiry Type" />

            <Spinner
                android:id="@+id/edt_search_enquirytype"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:background="@drawable/ronded_color_rectangle"
                android:ems="10"
                android:hint="Enquiry type "
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Budget Range (Rs.)" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:orientation="vertical" >

                <SeekBar
                    android:id="@+id/seekBar1_budget"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:max="800"
                    android:progress="0"
                    android:progressDrawable="@drawable/progressbar_sms"
                    android:secondaryProgress="0" />

                <TextView
                    android:id="@+id/budget_min"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 Min "
                    android:textColor="@color/black" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <Button
                    android:id="@+id/btn_save"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/full_bouton"
                    android:text="Save"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btn_reset"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/full_bouton"
                    android:text="Reset"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>